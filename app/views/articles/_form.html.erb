<div class="container">
    <%= form_with(model: article, local: true) do |f| %>
        <div class="form-group">
            <%= f.label :title, "Titulo" %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :desc, "DescripciÃ³n" %>
            <%= f.cktext_area :desc, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :body, "Contenido" %>
            <%= f.cktext_area :body, class: 'form-control' %>
        </div>
        <% if user_signed_in? %>
            <%= f.hidden_field :user_id, value: current_user.id %>
        <% else %>
            <%= f.hidden_field :user_id, value: '1' %>
        <% end %>

        <div class="actions">
            <%= f.submit 'Publicar', class: 'btn btn-success' %>
        </div>
    <% end %>
</div>