<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <span>
                    <h3>Todas las recetas</h3>
                </span>
            </div>
            <%if user_signed_in? %>
            <div class="col-12 text-right mt-auto">
                <%= link_to '<i class="fas fa-plus"></i> Artículo'.html_safe, new_article_path, :remote=>true, class: 'btn btn-primary btn-sm' %>
            </div>
            <%end%>
            <hr>
        </div>
        <br>
        <div class="row">
            <div class="col-12">
                <% @articles.each do |a|%>
                <div class="card text-center">
                    <div class="card-header">
                        <%= a.title %>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><%= a.desc %></p>
                        <%=  link_to ("<i class='fas fa-eye'></i> Ver más..").html_safe, a, class: 'btn btn-warning btn-sm' %>
                    </div>
                </div>
                <br>
                <% end %>
            </div>
        </div>
    </div>
</div>

<div id="new-article" style="display:none;">

</div>